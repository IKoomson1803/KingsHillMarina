<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kings Hill Marina</title>

    <link rel="stylesheet" href="~/Content/jquery-ui.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-msg.min.css" />
    <link rel="stylesheet" href="~/Content/bs_callout.css" />
    <link rel="stylesheet" href="~/Content/Site.css?v=8" />
    <link rel="stylesheet" href="~/Content/Tabs.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" />
    @*<link rel="stylesheet" href="https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css" />*@
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.2.1/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-msg.min.js"></script>
    <script type="text/javascript" src="~/Scripts/extensions.js"></script>

    <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js" type="text/javascript"></script>
    @*<script src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js" type="text/javascript"></script>*@
    <script src="https://cdn.datatables.net/buttons/1.2.1/js/dataTables.buttons.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/js/all.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <div id="divHeader">
                    <span id="spanHeader"> Kings Hill Marina</span>
                </div>

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" style="text-align:center;">
                    <ul class="nav navbar-nav">

                        <li id="lnkHome" class="top-link" style="margin-right:10px">
                            <a href="/" class="btn btn-danger">
                                <i class="fa fa-home fa-fw" aria-hidden="true"></i>&nbsp;Boat Details
                            </a>
                        </li>

                        <li id="lnkLookups" class="top-link" style="margin-right:10px">
                            <a href="/Lookups" class="btn btn-primary">
                                <i class="fa fa-wrench" aria-hidden="true"></i>&nbsp;Lookups
                            </a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container box-shadow">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <!-- Deactivation  confirmation modal -->
    <div class="modal fade" id="deletePromptModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-body" style="font-size:14px;font-weight:bold;">

                </div>
                <div class="modal-footer">
                    <div>
                        <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-sm btn-danger" id="btnDelete">Deactivate</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Kings Hill Marina</p>
        </div>
    </footer>

</body>
</html>
